<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/degradado_2"
    tools:context=".IngresosActivity">

    <LinearLayout
        android:id="@+id/ll_contenedor1"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_menu"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/lineas"
            android:padding="20dp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:text="Categorias"
            android:fontFamily="@font/abeezee"
            android:textColor="@color/white"
            android:textSize="40dp"
            android:gravity="center"
            android:textStyle="bold"/>
        <ImageView
            android:id="@+id/iv_home"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/casitawaaa"
            android:padding="10dp"/>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_gastos"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="@string/ingresos"
        android:textStyle="bold"
        android:textSize="30dp"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/ll_contenedor1"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="45dp"
        />
    <GridLayout
        android:layout_width="330dp"
        android:layout_height="500dp"
        android:columnCount="2"
        android:rowCount="2"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/tv_gastos"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <androidx.cardview.widget.CardView
            android:id="@+id/Salario"
            android:layout_width="150dp"
            android:layout_height="230dp"
            android:backgroundTint="#6F0E20"
            app:cardCornerRadius="20dp"
            android:layout_marginEnd="30dp">
            <ImageView
                android:layout_width="130dp"
                android:layout_height="180dp"
                android:src="@drawable/dinero"
                android:layout_marginHorizontal="10dp"/>
            <TextView
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:text="Salario"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:gravity="center"
                android:layout_marginTop="180dp"
                android:layout_marginHorizontal="10dp"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/Intereses"
            android:layout_width="150dp"
            android:layout_height="230dp"
            android:backgroundTint="#6F0E20"
            app:cardCornerRadius="20dp"
            android:layout_marginBottom="25dp">
            <ImageView
                android:layout_width="130dp"
                android:layout_height="180dp"
                android:src="@drawable/monedas"
                android:layout_marginHorizontal="10dp"/>
            <TextView
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:text="Intereses"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:gravity="center"
                android:layout_marginTop="180dp"
                android:layout_marginHorizontal="10dp"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/Regalo"
            android:layout_width="150dp"
            android:layout_height="230dp"
            android:backgroundTint="#6F0E20"
            app:cardCornerRadius="20dp"
            android:layout_marginBottom="15dp">
            <ImageView
                android:layout_width="130dp"
                android:layout_height="180dp"
                android:src="@drawable/sorpresa"
                android:layout_marginHorizontal="10dp"/>
            <TextView
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:text="Regalo"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:gravity="center"
                android:layout_marginTop="180dp"
                android:layout_marginHorizontal="10dp"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/Otros"
            android:layout_width="150dp"
            android:layout_height="230dp"
            android:backgroundTint="#6F0E20"
            app:cardCornerRadius="20dp"
            android:layout_marginBottom="15dp">
            <ImageView
                android:layout_width="130dp"
                android:layout_height="180dp"
                android:src="@drawable/puntos"
                android:layout_marginHorizontal="10dp"/>
            <TextView
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:text="Otro"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:gravity="center"
                android:layout_marginTop="180dp"
                android:layout_marginHorizontal="10dp"/>
        </androidx.cardview.widget.CardView>

    </GridLayout>
</androidx.constraintlayout.widget.ConstraintLayout>