<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C2B675"
    tools:context=".MenuActivity">

    <LinearLayout
        android:id="@+id/ll_Inicio"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:background="#9E817466"
        app:layout_constraintTop_toBottomOf="@id/iv_home"
        android:paddingHorizontal="30dp"
        android:layout_marginTop="20dp">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:paddingVertical="10dp"
            android:src="@drawable/casitawaaa"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="Inicio"
            android:textSize="40dp"
            android:fontFamily="@font/abeezee"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_marginStart="10dp"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/iv_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@drawable/payasito"
        tools:ignore="MissingConstraints"
        app:layout_constraintTop_toTopOf="parent"/>
    <LinearLayout
        android:id="@+id/ll_Gastos"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/ll_Inicio"
        android:paddingHorizontal="30dp">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:paddingVertical="10dp"
            android:src="@drawable/plata"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="Gastos"
            android:textSize="40dp"
            android:fontFamily="@font/abeezee"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_marginStart="10dp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_Informes"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:background="#9E817466"
        android:paddingHorizontal="30dp"
        app:layout_constraintTop_toBottomOf="@id/ll_Gastos">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:paddingVertical="10dp"
            android:src="@drawable/torta"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="Ingresos"
            android:textSize="40dp"
            android:fontFamily="@font/abeezee"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_marginStart="10dp"/>
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>