<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/fondo">

    <androidx.cardview.widget.CardView
        android:id="@+id/btnBienvenida"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        tools:ignore="MissingConstraints"
        app:cardCornerRadius="50dp"
        android:layout_marginHorizontal="70dp"
        android:layout_marginVertical="80sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#066C4C">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="¡bienvenido!"
                android:textStyle="italic"
                android:textColor="@color/white"
                android:fontFamily="@font/font"
                android:textAlignment="center"
                android:gravity="center"
                android:textSize="35sp"
                app:layout_constraintRight_toRightOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/LlCuadro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints"
        app:layout_constraintTop_toBottomOf="@+id/btnBienvenida"
        android:layout_marginTop="60dp"
        android:layout_marginHorizontal="50dp">

        <ImageView
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:background="@drawable/carita"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gracias por descargar nuestra aplicación."
            android:fontFamily="@font/abeezee"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:paddingLeft="25dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints"
        app:layout_constraintTop_toBottomOf="@+id/LlCuadro"
        android:layout_marginTop="40dp"
        android:layout_marginHorizontal="50dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Una inversión en tu ahorro es una inversion en tu futuro."
            android:fontFamily="@font/abeezee"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:paddingLeft="60dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="580dp"
        android:layout_height="580dp"
        tools:ignore="MissingConstraints"
        app:cardCornerRadius="600dp"
        android:translationX="-130dp"
        android:translationY="250dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#5DC691">

            <LinearLayout
                android:id="@+id/LlBilletera"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                tools:ignore="MissingConstraints"
                android:translationY="60dp"
                android:translationX="130dp"
                android:layout_marginHorizontal="120dp">

                <ImageView
                    android:layout_width="55dp"
                    android:layout_height="50dp"
                    android:background="@drawable/billetera"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="MissingConstraints"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Billetera"
                    android:fontFamily="@font/abeezee"
                    android:textSize="35dp"
                    android:textColor="@color/white"
                    android:layout_marginTop="5dp"
                    android:paddingLeft="25dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/LlLetra"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                tools:ignore="MissingConstraints"
                app:layout_constraintTop_toBottomOf="@+id/LlBilletera"
                android:translationY="70dp"
                android:translationX="130dp"
                android:layout_marginHorizontal="180dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ingresa el monto total que tienes en efectivo actualmente,
                    mas adelante podras editar esta cifra"
                    android:fontFamily="@font/abeezee"
                    android:textSize="20dp"
                    android:textColor="@color/white"
                    android:paddingLeft="8dp" />

            </LinearLayout>

            <ImageView
                android:id="@+id/next"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:layout_constraintRight_toRightOf="parent"
                android:translationY="250dp"
                android:translationX="-20dp"
                android:background="@drawable/flechon"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>